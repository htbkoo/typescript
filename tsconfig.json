{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "es6",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // For --target ES5: DOM,ES5,ScriptHost
    // For --target ES6: DOM,ES6,DOM.Iterable,ScriptHost
    "lib": ["dom", "es6","dom.iterable", "scripthost", "es2017.string", "ES2017.Object"]
  },
  "include": [
    "typings/index.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "typings/**/*"
  ]
}
